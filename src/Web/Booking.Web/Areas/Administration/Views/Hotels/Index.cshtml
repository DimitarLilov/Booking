@using Booking.Web.Models.Hotels;
@model IEnumerable<HotelViewModel>

@{
    ViewData["Title"] = "View";
}

<h1>Hotels</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Floors)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floors)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Hotels" asp-area="Administration" class="btn btn-success">Edit</a>
                <a asp-action="Details" asp-controller="Hotels" asp-area="Administration" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                <a asp-action="Delete" asp-controller="Hotels" asp-area="Administration" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
