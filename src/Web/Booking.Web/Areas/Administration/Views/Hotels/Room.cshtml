@using Booking.Web.Models.Hotels
@model HotelViewModel
@{
    ViewData["Title"] = "Room";
}

<h1>
    <a asp-action="Details" asp-controller="Hotels" asp-area="Administration" asp-route-id="@Model.Id">@Model.Name</a>
    Create Room
</h1>
<hr />
<form method="post" asp-action="Room" asp-controller="Hotels" asp-area="Administration">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name" required>
        </div>
        <div class="form-group col-md-4">
            <label for="floor">Floor</label>
            <select name="floor" id="floor" class="form-control" required>
                @for (int i = 1; i <= Model.Floors; i++)
                {
                    <option>@i</option>
                }
            </select>
        </div>
        <input type="number" name="hotelId" value="@Model.Id" hidden required>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
