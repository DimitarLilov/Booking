@using Booking.Web.Models.Hotels;
@model HotelDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<p>
    <a asp-action="Room" asp-controller="Hotels" asp-route-id="@Model.Id">Create New Room</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Floor
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => room.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => room.Floor)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Rooms" asp-area="Administration" class="btn btn-success">Edit</a>
                    <a asp-action="Details" asp-controller="Rooms" asp-area="Administration" asp-route-id="@room.Id" class="btn btn-primary">Details</a>
                    <a asp-action="Delete" asp-controller="Rooms" asp-area="Administration" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
